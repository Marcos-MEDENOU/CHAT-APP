doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title NodeJs Express Chat App
        script(src="https://cdn.tailwindcss.com")
    body(class='h-screen flex flex-col')
        header(class="")
